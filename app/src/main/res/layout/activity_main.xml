<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hello.a.rxandroid.MainActivity">


    <Button
        android:id="@+id/start_rx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start RX" />

    <Button
        android:id="@+id/text_view_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Text View"
        app:layout_constraintTop_toBottomOf="@+id/start_rx" />

    <Button
        android:id="@+id/image_view_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Image View"
        app:layout_constraintTop_toBottomOf="@+id/text_view_bt" />

    <Button
        android:id="@+id/color_matrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Color Matrix"
        app:layout_constraintTop_toBottomOf="@+id/image_view_bt" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/triangle"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>
